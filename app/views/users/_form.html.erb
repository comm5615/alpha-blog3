<%= render "shared/errors", obj: @user %>

<%= form_for @user do |f| %>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :username, class: "xx-form-label" %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :email, class: "xx-form-label" %>
    </div>
    <div class="col-sm-8">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :password, class: "xx-form-label" %>
    </div>
    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <div class="col-sm-2">
      <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary btn-lg btn-info") %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
  </div>
<% end %>
