<h1 align="center">Create new category</h1>

<%= render "shared/errors", obj: @category %>

<%= form_for @category do |f| %>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :name, class: "xx-form-label" %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter category name", autofocus: true %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <div class="col-sm-2">
      <%= f.submit class: "btn btn-primary btn-lg btn-info" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
  </div>
<% end %>
