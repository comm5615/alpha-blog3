<h1 align="center">Listing All Categories</h1>

<div align="center">
  <%= will_paginate @categories, list_classes: %w(pagination justify-content-center), previous_label: "Previous", next_label: "Next" %>
  <% @categories.each do |category| %>
    <ul class="listing">
      <div class="row xx-post-sp">
        <div class="col-sm-4 offset-sm-4">
          <div class="card">
            <div class="card-header">
              <div class="article-title center">
                <p><%= link_to category.name, category_path(category) %></p>
                <p class="xx-small"><%= pluralize(category.articles.count, "article") %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </ul>
  <% end %>
</div>
