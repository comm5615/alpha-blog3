<% if @article.errors.any? %>
  <h2>The following errors prevented the article from being created:</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :title, class: "xx-form-label" %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :description, class: "xx-form-label" %>
    </div>
    <div class="col-sm-8">
      <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <div class="col-sm-2">
      <%= f.submit class: "btn btn-primary btn-lg btn-info" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
  </div>

<% end %>
