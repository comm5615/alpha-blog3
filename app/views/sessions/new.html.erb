<h1 class="xx-page-header">Log in</h1>

<%= form_for(:session, url: login_path) do |f| %>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :email, class: "xx-form-label" %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :password, class: "xx-form-label" %>
    </div>
    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <div class="col-sm-2">
      <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-info" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
  </div>
<% end %>
